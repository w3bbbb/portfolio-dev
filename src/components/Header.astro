---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  {
    title: "Experience",
    label: "experience",
    url: "/#experience",
  },
  {
    title: "Projects",
    label: "projects",
    url: "/#projects",
  },
  {
    title: "About",
    label: "about",
    url: "/#about",
  },
  {
    title: "Contact",
    label: "contact",
    url: "mailto:chrissww9@gmail.com",
  },
];
---

<header class="fixed top-4 z-50 w-full flex justify-center">
  <nav
    class="flex gap-2 px-3 py-2 backdrop-blur-md bg-white/30 dark:bg-black/20 border border-white/30 dark:border-white/10
    rounded-full shadow-lg transition-all duration-300 text-sm font-medium text-gray-800 dark:text-gray-100"
  >
    {
      navItems.map((link) => (
        <a
          href={link.url}
          aria-label={link.label}
          class="relative px-4 py-2 rounded-full transition text-gray-700 dark:text-gray-200 hover:text-orange-600 dark:hover:text-orange-400 hover:bg-white/50 dark:hover:bg-white/10"
        >
          {link.title}
        </a>
      ))
    }
    {/* <ThemeToggle /> */}
  </nav>
</header>

